<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/androidlogin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Doctor"
    tools:showIn="@layout/app_bar_doctor">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="205dp"
        android:layout_height="0dp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toTopOf="@+id/txtWelcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:srcCompat="@drawable/doctors" />

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="211dp"
        android:layout_height="40dp"
        android:layout_marginBottom="292dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btnAppointment"
        android:layout_width="174dp"
        android:layout_height="53dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_round"
        android:onClick="onAppointment"
        android:text="Appointment"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btnTimeTable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnInformation"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/btnTimeTable"
        android:layout_width="174dp"
        android:layout_height="53dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_round"
        android:onClick="onTimeTable"
        android:text="Time Table"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAppointment" />

    <Button
        android:id="@+id/btnInformation"
        android:layout_width="174dp"
        android:layout_height="53dp"
        android:layout_marginBottom="97dp"
        android:background="@drawable/button_round"
        android:onClick="onViewInformation"
        android:text="Self Details"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

</android.support.constraint.ConstraintLayout>